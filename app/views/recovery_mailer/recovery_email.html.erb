<table class="content" cellpadding="0" cellspacing="0" border="0" width="600" align="center" bgcolor="#fefefe" style="border: 1px solid #ccc; box-shadow: 0px 2px 7px 2px rgba(0,0,0,0.31);">
  <tr height="40">
    <td width="40" valign="top" style="line-height: 0; font-size: 0px;">
      &nbsp;
    </td>

    <td width="520" valign="top" style="line-height: 0; font-size: 0px;">
      &nbsp;
    </td>

    <td width="40" valign="top" style="line-height: 0; font-size: 0px;">
      &nbsp;
    </td>
  </tr>

  <tr>
    <td width="40" valign="top" style="line-height: 0; font-size: 0px;">
      &nbsp;
    </td>

    <td width="520" valign="top">
      <table cellpadding="0" cellspacing="0" border="0" width="100%">
        <tr>
          <td valign="top" align="center" style="color: #2c2c2c; font-weight: bold; font-size: 16px; font-family: Tahoma, Verdana, Segoe, sans-serif;">
            <%= I18n.t('mail.recovery.title') %>
          </td>
        </tr>

        <tr height="30">
          <td valign="top" style="line-height: 0; font-size: 0px;">
            &nbsp;
          </td>
        </tr>

        <tr>
          <td valign="top" align="center" style="line-height: 1.7; color: #2c2c2c; font-size: 14px; font-family: Tahoma, Verdana, Segoe, sans-serif;">
            <%= I18n.t('mail.recovery.instructions') %>
          </td>
        </tr>

        <tr height="20">
          <td valign="top" style="line-height: 0; font-size: 0px;">
            &nbsp;
          </td>
        </tr>

        <tr>
          <td valign="bottom" class="text-center">
            <table cellpadding="0" cellspacing="0" border="0" align="center">
              <tr>
                <td>
                  <a target="_blank" href="<%= @recovery_link %>" style="display: block; height: 30px; width: 260px; text-align: center; background: #54c2f5; color: #fff; text-decoration: none; font-family: Tahoma, Verdana, Segoe, sans-serif; font-size: 14px; padding: 14px 0 0 0;">
                    <%= I18n.t('mail.recovery.link_text') %>
                  </a>
                </td>
              </tr>
            </table>
          </td>
        </tr>

        <tr height="20">
          <td valign="top" style="line-height: 0; font-size: 0px;">
            &nbsp;
          </td>
        </tr>

        <tr>
          <td valign="top" align="center" style="line-height: 1.7; color: #2c2c2c; font-size: 12px; font-family: Tahoma, Verdana, Segoe, sans-serif;">
            <%= I18n.t('mail.recovery.warning') %>
          </td>
        </tr>
      </table>
    </td>

    <td width="40" valign="top" style="line-height: 0; font-size: 0px;">
      &nbsp;
    </td>
  </tr>

  <tr height="40">
    <td width="40" valign="top" style="line-height: 0; font-size: 0px;">
      &nbsp;
    </td>

    <td width="520" valign="top" style="line-height: 0; font-size: 0px;">
      &nbsp;
    </td>

    <td width="40" valign="top" style="line-height: 0; font-size: 0px;">
      &nbsp;
    </td>
  </tr>
</table>
